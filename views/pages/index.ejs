<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Patient record</title>
</head>
<body>
    <div class="container p-5">
        <h1 class="text-center mb-5 text-uppercase text-muted"> NodeJS API for record patient stress level </h1>
        <div class="row">
            <div class="col-sm-5 bg-light rounded py-3">
                <h2 class="text-center">Record your stress</h2>
                <form action="/record" method="post" enctype="multipart/form-data">
                    <div class="form-group mt-2">
                        <label for="_user">Enter your name</label>
                        <input type="text" name="user_name" id="_user" class="form-control" placeholder="name" required>
                    </div>
                    <div class="form-group mt-2">
                        <label for="_stress">Enter your stress level (0-5)</label>
                        <input type="number" name="user_stress" id="_stress" class="form-control" placeholder="your stress 0-5" required>
                    </div>
                    <div class="form-group mt-2">
                        <label for="_image">Insert your picture (optional)</label>
                        <input type="file" name="user_img" id="_img" class="form-control" placeholder="your stress 0-5" accept="Image/*">
                        <img src="" alt="">
                    </div>
                    <% if (locals.registerError) {
                        registerError.forEach(function(error_msg) { %>
                        <div class="alert alert-danger" role="alert"><%= error_msg%> </div>
                      <%  })
                    } %>
                    <button class="mt-2 btn btn-success">Submit</button>
                </form>
            </div>
            <div class="col-sm-6 bg-light rounded border py-3 offset-sm-1">
                <h2 class="text-center">Get your record</h2>
                <form action="/check" method="post">
                    <div class="form-group">
                        <label for="_user">Name</label>
                        <input type="text" name="name" id="_name" class="form-control" placeholder="name" required>
                    </div>
                    <button class="mt-2 btn btn-success">Enter</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>